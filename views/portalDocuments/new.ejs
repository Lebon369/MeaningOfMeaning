<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Portal Document</h1>
        <div class="col-6 offset-3">
            <form action="/portalDocuments" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="portalDocument[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="author">Author</label>
                    <input class="form-control" type="text" id="author" name="portalDocument[author]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="portalDocument[imageLink]">
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Portal Document </button>
                </div>
            </form>
            <a href="/portalDocuments">All Portal Documents</a>
        </div>
    </div>